datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id
  email    String  @unique
  password String
  isActive Boolean
}

model FeedSource {
  id       String     @id
  url      String
  FeedItem FeedItem[]
}

model FeedItem {
  id          String       @id
  feedSources FeedSource[]
  title       String
  link        String
  date        DateTime
  content     String?
  author      String?
  image       String?
}
